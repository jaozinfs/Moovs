<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--  Estilização do Chip  -->
    <style name="ChipTheme" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:fontFamily">@font/alfa_slab_one</item>
        <item name="chipBackgroundColor">@color/chip_background_color_selected</item>
        <item name="android:textColor">@color/chip_text_color_selected</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/colorPrimary</item>
    </style>

    <style name="ChipTheme.TextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/alfa_slab_one</item>
    </style>

    <style name="OutlineDeselected" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/alfa_slab_one</item>
        <item name="background">@color/chip_background_color_selected</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>
    <style name="OutlineSelected" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/alfa_slab_one</item>
        <item name="background">@color/colorAccent</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/colorAccent</item>
    </style>
    <!--  Estilização do Texto do item no BottomNavigationView  -->
    <style name="NavTextAppearanceTheme" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/alfa_slab_one</item>
        <item name="android:textSize">12sp</item>
        <item name="elevation">8dp</item>
    </style>
    <style name="TextAppearance">
        <item name="fontFamily">@font/alfa_slab_one</item>
        <item name="android:textSize">@dimen/default_title_text_size</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <dimen name="default_title_text_size">22sp</dimen>
</resources>